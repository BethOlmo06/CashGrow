@{
    ViewBag.Title = "DemoLogin";
    Layout = "~/Views/Shared/_LayoutAccountViews.cshtml";
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Demo Login - CashGrow | Beth Olmo</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="icon" href="https://via.placeholder.com/50" type="image/x-icon" />

    <!-- Fonts and icons -->
    <script src="../Scripts/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Lato:300,400,700,900"] },
            custom: { "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands", "simple-line-icons"], urls: ['../Content/fonts.min.css'] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!-- CSS Files -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/atlantis2.css" rel="stylesheet" />
</head>
<body class="login">
    <div class="wrapper wrapper-login wrapper-login-full p-0">
        <div class="login-aside w-50 d-flex flex-column align-items-center justify-content-center text-center bg-secondary-gradient">
            <h1 class="title fw-bold text-white mb-3">CashGrow</h1>
            <p class="subtitle text-white mb-3">Household budget management.</p>
        </div>
        <div class="login-aside w-50 d-flex align-items-center justify-content-center bg-white">
            <div class="container container-login container-transparent animated fadeIn">
                <div class="row mb-3">
                    <img src="~/Images/CashGrowBigger.png" class="mx-auto d-block" />
                </div>

                <div class="login-form">
                    <h2 class="text-center mt-xl-5">Select A Demo User</h2>
                </div>

                <div class="login-form">
                    <div class="form-group">
                        @using (Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("emailKey", "DemoHeadEmail")
                            @Html.Hidden("passwordKey", "DemoHeadPassword")
                            <div class="login-account">
                                <button type="submit" class="btn btn-block btn-secondary">Head Of Household</button>
                            </div>
                        }

                    </div>
                    <div class="form-group mb-xl-5">
                        @using (Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("emailKey", "DemoMemberEmail")
                            @Html.Hidden("passwordKey", "DemoMemberPassword")
                            <div class="login-account">
                                <button type="submit" class="btn btn-block btn-secondary">Household Member</button>
                            </div>
                        }

                    </div>
                    <br />
                    <div class="login-form">
                        <h2 class="text-center mt-xl-5">Or you can...</h2>
                    </div>
                    <div class="login-account">
                        <a href="~/Account/Login" class="btn btn-block btn-success">Login</a>
                    </div>
                    <div class="login-account">
                        <a href="~/Account/Register" class="btn btn-block btn-secondary">Create a New Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>